# Project Settings
PROJECT_NAME="Perspective Prism MVP"

# LLM API Configuration
# Using Hyperbolic as the LLM provider (OpenAI SDK-compatible)
# Note: For OpenAI-compatible providers (Hyperbolic, Tensorblock, etc.), 
# set LLM_PROVIDER=openai since they implement the OpenAI SDK interface
LLM_API_KEY=your_hyperbolic_api_key_here
# Hyperbolic Endpoint (since we are testing direct connection first)
LLM_BASE_URL=https://api.hyperbolic.xyz/v1
# The Hyperbolic Model ID
LLM_MODEL=gpt-oss-120b
MAX_CLAIMS_PER_ANALYSIS=15

# LLM Provider Selection ("openai" or "gemini")
# Use "openai" for OpenAI-compatible providers (Hyperbolic, Tensorblock, OpenAI)
LLM_PROVIDER=openai

# Google Search API Settings
# Get these from Google Cloud Console (Custom Search JSON API)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_CSE_ID=your-custom-search-engine-id-here
SEARCH_PROVIDER=google

# CORS Settings
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS="http://localhost:5173,http://localhost:3000,chrome-extension://nanlbdgphpjpdmIbfinajkhglclanlfe"
